@model CourseDesign.Models.Engineering
@{
    ViewBag.Title = "编辑工程师信息";
}
<style>
    table, table tr th, table tr td {
        border: 1px solid #0094ff;
    }

    table {
        width: 600px;
        text-align: center;
        border-collapse: collapse;
    }
</style>
<h2>编辑工程师信息</h2>


@using (Html.BeginForm("ShowOrderData", "Home", FormMethod.Post))
{
    <tr>
        <td>排序方式：</td>
        <td>
            @Html.DropDownList("orderOption", ViewBag.orderlist as SelectList)

        </td>
    </tr>
    <input type="submit" value="排序" />
}



<br />

<body>
    @using (Html.BeginForm())
    {
        <table>
            <tr>
                <td>编号</td>
                <td>姓名</td>
                <td>性别</td>
                <td>学历</td>
                <td>籍贯</td>
                <td>地址</td>
                <td>电话</td>
                <td>工龄</td>
                <td>工资</td>
                <td>出生日期</td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            @foreach (var a in ViewData["DataList"] as List<CourseDesign.Models.Engineering>)
            {
                <tr>
                    <td>@a.Id</td>
                    <td>@a.Name</td>
                    @if (a.Sex == 1)
                    {
                        <td>男</td>
                    }
                    else
                    {
                        <td>女</td>
                    }
                    <td>@a.Education</td>
                    <td>@a.Place</td>
                    <td>@a.Address</td>
                    <td>@a.Telephone</td>
                    <td>@a.Workage</td>
                    <td>@a.Salary</td>
                    <td>@a.Birth</td>
                    <td>@Html.ActionLink("修改", "Modify", new { Cid = a.Id })</td>
                    <td>@Html.ActionLink("删除", "Remove", new { Cid = a.Id })</td>
                    <td>@Html.ActionLink("计算月薪", "CalculateData", new { Cid = a.Id })</td>

                </tr>
            }
        </table>
    }
</body>

